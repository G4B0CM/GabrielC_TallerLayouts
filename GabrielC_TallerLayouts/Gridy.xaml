<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GabrielC_TallerLayouts.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Text="Column 0, Row 0"
               WidthRequest="200" BackgroundColor="Red"/>
                        <Label Grid.Column="1"
               Text="Column 1, Row 0" BackgroundColor="Blue"/>
                        <Label Grid.Row="1"
               Text="Column 0, Row 1" BackgroundColor="Purple"/>
                    <Label Grid.Column="1"
               Grid.Row="1"
               Text="Column 1, Row 1" BackgroundColor="Green"/> 
        </Grid>
    </VerticalStackLayout>
</ContentPage>